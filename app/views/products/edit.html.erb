<div class="container text-center container-size">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@product] do |f| %>
      <%= f.input :name, label: 'Nom' %>
      <%= f.input :short_desc, label: 'Résumé' %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :price, label: 'Prix' %>
      <%= cl_image_tag(@product.photo, width: 200, height: 175, crop: :fill, class: 'product-photo') %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit 'Sauvegardez', class: 'btn btn-info btn-sm m-b' %>
    <% end %>
  </div>
</div>
