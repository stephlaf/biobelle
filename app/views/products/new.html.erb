<div class="container text-center container-size">
  <h1>Ajoutez un produit</h1>
  <div class="product-add">
    <%= simple_form_for [@product] do |f| %>
      <%= f.input :name, label: 'Nom' %>
      <%= f.input :short_desc, label: 'Résumé' %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :price, label: 'Prix' %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit 'Sauvegardez', class: 'btn btn-info btn-sm m-b' %>
    <% end %>
 </div>
</div> 
