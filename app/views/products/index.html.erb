<%= render 'shared/banner' %>

<div class="container text-center container-size">
  <h1>
    <%= link_to 'Add a product', new_product_path %>
  </h1>
  <div class="row">
    <% @products.each do |product| %>
      <div id="products-index" class="col-md-3 product-card">
        <h3> <%= link_to product.name, product_path(product.id) %> </h3>
        <p> <%= product.description %> </p>
        <p> <%= product.price %> </p>
        <%= cl_image_tag(product.photo, width: 200, height: 175, crop: :fill, class: 'product-photo')%>
        
      </div>
    <% end %>    
  </div>
</div>
